<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/designBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top App Bar - White with border -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/designSurface"
            android:paddingHorizontal="16dp">



            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Profile Browser"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/designTextPrimary"/>



            <!-- Bottom border/shadow line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#E5E7EB"/>

        </RelativeLayout>

        <!-- Profile List Area -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/profileRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="88dp"
                android:clipToPadding="false"
                android:overScrollMode="never"/>

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/emptyView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“±"
                    android:textSize="64sp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Profiles Yet"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/designTextPrimary"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap + to create your first profile"
                    android:textSize="14sp"
                    android:textColor="@color/designTextSecondary"
                    android:gravity="center"/>

            </LinearLayout>

        </FrameLayout>

        <!-- Footer Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Built by Prince Nareshbhai Tagadiya"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/designTextMeta"
            android:paddingBottom="16dp"
            android:letterSpacing="0.05"/>

    </LinearLayout>

    <!-- Floating Action Button - Rounded Square Style -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="Add Profile"
        app:backgroundTint="@color/designPrimary"
        app:tint="@color/white"
        app:elevation="4dp"
        app:fabSize="normal"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Large"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
