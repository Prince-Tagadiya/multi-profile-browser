<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F7F8"
    android:orientation="vertical">

    <!-- Top App Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:elevation="0dp"
        android:paddingHorizontal="8dp">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/btnCancel"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            android:tint="#000000"
            android:scaleType="centerInside"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Add Profile"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#111418"/>

    </RelativeLayout>
    
    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E7EB"/>

    <!-- Scrollable Form Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Profile Name Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111418"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/inputProfileName"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="e.g. Meesho Seller A"
                android:textSize="16sp"
                android:textColor="#111418"
                android:textColorHint="#9CA3AF"
                android:background="@drawable/edit_text_bg"
                android:paddingHorizontal="16dp"
                android:paddingVertical="14dp"
                android:layout_marginBottom="24dp"
                android:inputType="text"/>

            <!-- Website URL Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Website URL"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111418"
                android:layout_marginBottom="8dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="32dp">

                <EditText
                    android:id="@+id/inputProfileUrl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="https://example.com"
                    android:textSize="16sp"
                    android:textColor="#111418"
                    android:textColorHint="#9CA3AF"
                    android:background="@drawable/edit_text_bg"
                    android:paddingStart="16dp"
                    android:paddingEnd="48dp"
                    android:paddingVertical="14dp"
                    android:inputType="textUri"/>

                <!-- Globe Icon -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_globe"
                    android:tint="#9CA3AF"
                    android:contentDescription="URL"/>

            </RelativeLayout>

            <!-- Quick Shortcuts Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QUICK SHORTCUTS"
                android:textSize="13sp"
                android:textColor="#6B7280"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:layout_marginBottom="12dp"
                android:textAllCaps="true"/>

            <!-- Shortcut Buttons - Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:id="@+id/chipMeesho"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:background="@drawable/shortcut_action_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_globe"
                        android:tint="#137FEC"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meesho Seller"
                        android:textColor="#111418"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/chipAmazon"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:background="@drawable/shortcut_action_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_store"
                        android:tint="#137FEC"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amazon Seller"
                        android:textColor="#111418"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Shortcut Buttons - Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:id="@+id/chipFlipkart"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:background="@drawable/shortcut_action_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_store"
                        android:tint="#137FEC"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flipkart Seller"
                        android:textColor="#111418"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/chipGoogle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:background="@drawable/shortcut_action_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_search"
                        android:tint="#137FEC"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Google"
                        android:textColor="#111418"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>
            
            <!-- Hidden inputs to keep ID references but hidden -->
            <View android:id="@+id/chipMyntra" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
            <View android:id="@+id/chipWhatsApp" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>

        </LinearLayout>

    </ScrollView>

    <!-- Save Button at Bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#F6F7F8">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Save Profile"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/profile_item_active_bg"
            app:backgroundTint="#137FEC"
            android:elevation="2dp"
            app:cornerRadius="12dp"
            android:stateListAnimator="@null"/>

    </LinearLayout>

</LinearLayout>
